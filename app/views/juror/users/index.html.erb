<p id="notice"><%= notice %></p>
<% if @users %>
<br/>
<h4>Lista över nämndemän</h4>
<table>
  <thead>
  <tr>
    <th>Namn</th>
    <th>Email</th>
    <th class="list">Visa</th>
    <th class="list">Redigera</th>
    <th class="list">Ta bort</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |j| %>
     <tr class="user" id="asset_<%= j.id %>">
        <td><%= j.name %></td>
        <td><%= j.email %></td>
        <td><%= link_to 'Visa', "users/#{j.id}" %></td>
        <td><%= link_to 'Redigera', edit_juror_user_path(j) %></td>
          <td> <%= link_to 'Ta bort', juror_user_path(j) , method: :delete, 
              data: {confirm: "Are you sure you want to remove this user?"}, remote: true %> <br/> 
            </td>
      </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<br />
<h4>Just nu finns inga nämndemän inlagda.</h4>
<% end %>

<%= link_to 'Lägg till nämndeman' ,new_juror_user_path, class: 'button tiny', style: 'color: white; margin-top: 20px;' %>
